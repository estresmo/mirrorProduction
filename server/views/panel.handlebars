                        <option selected disabled id="option-disabled">Seleccionar Uno</option>
                                          
                    
                      </select>
                    </div>
                    <!-- Esta es el input de talla -->
                    <div class="form-group" id="size">
                      <label for="inputClientCompany">Talla</label>
